{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es5",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "outDir": "./dist",
    "sourceMap": true,
    "plugins": [
      {
        "name": "typescript-eslint-language-service"
      }
    ]
  },
  "include": ["src-ts/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
